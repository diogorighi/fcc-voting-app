<div class="jumbotron">
  <h1 class="display-4">Welcome to Voting App!</h1>
    {{#if currentUser}}
      <p class="lead"> Hello, {{currentUser.name}}! Have a nice day! ;)</p>
    {{else}}
      <p class="lead">Please <a href="/login">Login</a> or <a href="/signup">Sign Up</a> to create your polls!</p>
      <a class="btn btn-success" href="#" role="button">Sign up today</a>
      <a class="btn btn-secondary" href="/auth/github" role="button"><i class="fa fa-github"></i>Login with Github</a>
    {{/if}}
</div>

<ul class="list-group">
  {{#each polls}}
  <li class="list-group-item">
    {{title}} by {{author.name}}
    <div class="btn-group pull-xs-right">
      <a class="btn btn-primary btn-sm" href="polls/{{_id}}">View</a>
      <a class="btn btn-secondary btn-sm" href="polls/vote/{{_id}}">Vote</a>
    </div>
  </li>
  {{/each}}
</ul>
